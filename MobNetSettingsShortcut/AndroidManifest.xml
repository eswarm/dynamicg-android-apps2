<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.dynamicg.mobNetSettingsShortcut"
      android:versionCode="1"
      android:versionName="1.0">
    
    <supports-screens 
    	android:smallScreens="true"
        android:normalScreens="true"
        android:largeScreens="true"
        android:anyDensity="true"
        />
        
    <application android:icon="@drawable/stat_sys_data_inandout_3g_38x38" android:label="@string/app_name">

        <activity android:name="com.dynamicg.mobNetSettingsShortcut.Main"
                  android:label="@string/app_name"
                  android:theme="@android:style/Theme.Dialog"
                  >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
		<receiver android:name=".BootCompletedReceiver">
			<intent-filter>
				<action android:name ="android.intent.action.BOOT_COMPLETED" />
			</intent-filter>
		</receiver>
	       
    </application>
    
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    
    <uses-sdk android:minSdkVersion="8" />

</manifest>