<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <style name="GenericText">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
    </style>
    
    <style name="TitleText" parent="GenericText">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#fff</item>
    </style>
    
    <style name="TitleTextSizeMedium" parent="GenericText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#fff</item>
    </style>
    <style name="TitleTextSizeSmall" parent="GenericText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#fff</item>
    </style>
    
    <style name="UrlText" parent="GenericText">
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="DialogButtonPanel">
	    <item name="android:background">#555</item>
	    <item name="android:layout_marginTop">20dip</item>
	    <item name="android:paddingTop">15dip</item>
	    <item name="android:paddingBottom">10dip</item>
	</style>
    
    <style name="DialogButton">
	    <item name="android:layout_width">120dip</item>
	    <item name="android:layout_height">wrap_content</item>
	</style>
	
	<style name="PrefsLabel">
		<item name="android:textSize">16sp</item>
        <item name="android:textColor">#fff</item>
	</style>
	
	<style name="PrefsClickText">
		<item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/links</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
	    <item name="android:padding">8dip</item>
	    <item name="android:focusable">true</item>
	</style>
	
	<style name="PrefsLabelSmall">
		<item name="android:textSize">12sp</item>
        <item name="android:textColor">#fff</item>
	</style>
	<style name="PrefsHint">
		<item name="android:textSize">12sp</item>
        <item name="android:textColor">#ccc</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
	</style>
	
	<style name="Divider">
		<item name="android:layout_height">1dp</item>
        <item name="android:layout_marginBottom">5dip</item>
        <item name="android:background">?android:attr/listDivider</item>
	</style>
	
    <style name="PrefsGroup">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">#666</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:layout_marginLeft">2dip</item>
        <item name="android:layout_marginRight">2dip</item>
        <item name="android:layout_marginBottom">2dip</item>
        <item name="android:paddingLeft">4dip</item>
        <item name="android:paddingRight">4dip</item>
        <item name="android:paddingTop">2dip</item>
        <item name="android:paddingBottom">2dip</item>
    </style>

    <style name="PrefsGroupFirst" parent="PrefsGroup">
        <item name="android:layout_marginTop">0dip</item>
    </style>
    
	<style name="EditBodyLabel">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
	</style>
	<style name="EditBodyTextInput">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:singleLine">true</item>
	</style>

	<style name="PrefsTabScrollView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginBottom">60dip</item>
	</style>
	
</resources>
