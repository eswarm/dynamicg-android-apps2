<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:padding="@dimen/mainPadding"
    >
    
    <!-- TITLE -->
    <TextView style="@style/EditBodyLabel" android:text="@string/editTitle" />
    <EditText style="@style/EditBodyTextInput"
    	android:id="@+id/shortcutTitle"
	    android:inputType="textCapWords"
	    />
	    
    <!-- ICON DENSITY -->
    <TextView style="@style/EditBodyLabel" android:id="@+id/shortcutIconDensityLabel" />
    <Spinner 
        android:id="@+id/shortcutIconDensity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawSelectorOnTop="true"
    />

    <!-- BG COLOR -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shortcutBgColor"
        android:text="@string/shortcutBackgroundColor"
        android:layout_marginTop="10dip"
        android:layout_marginBottom="10dip"
    />

    <!-- PREVIEW -->
    <TextView style="@style/EditBodyLabel" android:text="@string/shortcutIconPreviewLabel" />
	<ImageView
        android:layout_width="@dimen/shortcutIconSize"
        android:layout_height="@dimen/shortcutIconSize"
        android:id="@+id/shortcutIconPreview"
        />

	<!-- ====================== done ====================== -->
	<View
	    android:layout_height="5dip"
	    android:layout_width="fill_parent"
		/>
		
</LinearLayout>
