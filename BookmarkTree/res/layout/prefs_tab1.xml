<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:padding="5dip"
	>

	<!-- ====================== Presentation ====================== -->

	<TextView style="@style/PrefsGroupFirst" android:text="@string/prefsGroupLayout" /> 
    
   	<TextView style="@style/PrefsHint" 
   		android:text="@string/prefsHintRestart"
   		/>

    <TableLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:padding="@dimen/mainPadding"
	    >
	    
	    <!-- LIST STYLE -->
	    <TableRow>
	    	<TextView style="@style/PrefsLabel" 
	    		android:text="@string/prefsListStyle" 
	    		android:layout_gravity="center_vertical"
	    		/>
	    	<Spinner style="@style/PrefsSpinner" android:id="@+id/prefsListStyle" />
	    </TableRow>

	    <!-- SORT OPTION -->
	    <TableRow>
	    	<TextView style="@style/PrefsLabel"
	    		android:text="@string/prefsSortLabel" 
	    		android:layout_gravity="center_vertical"
	    		/>
	    	<Spinner style="@style/PrefsSpinner" android:id="@+id/prefsSortOption" />
	    </TableRow>
	    
	    <!-- ICON SCALE -->
	    <TableRow>
	    	<TextView style="@style/PrefsLabel"
	    		android:text="@string/prefsIconScaling" 
	    		android:layout_gravity="center_vertical"
	    		/>
	    	<Spinner style="@style/PrefsSpinner" android:id="@+id/prefsIconScaling" android:layout_marginBottom="0dip" />
	    </TableRow>
	    <TableRow>
	    	<TextView style="@style/PrefsHint" android:layout_span="2" android:text="@string/prefsIconScalingHint" /> 
	    </TableRow>
	    
    </TableLayout>

    <CheckBox style="@style/PrefsLabel"
    	android:id="@+id/prefsSortCaseInsensitive"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="@string/prefsSortCaseInsensitive"
	    />
	    
    <CheckBox style="@style/PrefsLabel"
    	android:id="@+id/prefsKeepState"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="@string/prefsKeepState"
	    />
    
	<!-- ====================== Colors ====================== -->
	
	<TextView style="@style/PrefsGroup" android:text="@string/prefsGroupColors" /> 

	<TextView style="@style/PrefsClickText" android:id="@+id/prefsColorFolder" /> 
	<TextView style="@style/PrefsClickText" android:id="@+id/prefsColorBookmarkTitle" /> 
	<TextView style="@style/PrefsClickText" android:id="@+id/prefsColorBookmarkUrl" /> 

	<!-- ====================== done ====================== -->
	<View
	    android:layout_height="15dip"
	    android:layout_width="fill_parent"
		/>
		
</LinearLayout>
