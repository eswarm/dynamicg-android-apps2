<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <style name="DialogButton" parent="android:Widget.Holo.Button.Borderless.Small">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
    </style>

    <style name="PrefLabel">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginTop">10dp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">#bbbbbb</item>
		<item name="android:textSize">14sp</item>
	</style>
    
    <style name="PrefSeekbar">
		<item name="android:layout_width">240dp</item>
		<item name="android:layout_height">wrap_content</item>
	</style>
    <style name="PrefSeekbarHint">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginLeft">8dp</item>
		<item name="android:textColor">#505050</item>
	</style>
    <style name="PrefLayoutImage">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:paddingLeft">10dp</item>
		<item name="android:paddingRight">10dp</item>
	</style>
    <style name="PrefLayoutToggle">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">4dp</item>
	</style>
    <style name="DefaultText">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
	</style>
	
	
  <style name="ThemeDefault" parent="android:Theme.Holo.Dialog">
    <item name="android:windowBackground">@drawable/background_holo_dark</item>
  </style>
  <style name="ThemeSemiTransparent" parent="android:Theme.Holo.Dialog">
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowBackground">@color/BackgroundSemiTransparent</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowIsFloating">true</item>
    <item name="android:backgroundDimEnabled">false</item>
  </style>
  
</resources>